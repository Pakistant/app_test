{
  "name": "wedding-project-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "migrate": "cross-env NODE_OPTIONS=--experimental-specifier-resolution=node knex migrate:latest --knexfile knexfile.mjs",
    "migrate:make": "cross-env NODE_OPTIONS=--experimental-specifier-resolution=node knex migrate:make --knexfile knexfile.mjs",
    "migrate:rollback": "cross-env NODE_OPTIONS=--experimental-specifier-resolution=node knex migrate:rollback --knexfile knexfile.mjs",
    "seed": "cross-env NODE_OPTIONS=--experimental-specifier-resolution=node knex seed:run --knexfile knexfile.mjs",
    "server": "cross-env TS_NODE_PROJECT=tsconfig.server.json NODE_OPTIONS=\"--loader ts-node/esm\" node --experimental-specifier-resolution=node server/index.ts",
    "start": "node dist/server/index.js",
    "build": "tsc -p tsconfig.server.json && vite build",
    "postinstall": "npm run migrate",
    "migrate:prod": "cross-env NODE_ENV=production NODE_OPTIONS=--experimental-specifier-resolution=node knex migrate:latest --knexfile knexfile.mjs"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@hello-pangea/dnd": "^16.5.0",
    "@tanstack/react-query": "^5.24.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "fr": "^1.0.11",
    "gantt-task-react": "^0.3.9",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.344.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-big-calendar": "^1.11.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.4",
    "sonner": "^1.4.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.7",
    "@types/pg": "^8.11.2",
    "@types/react": "^18.2.56",
    "@types/react-big-calendar": "^1.8.9",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^5.1.4"
  }
}
